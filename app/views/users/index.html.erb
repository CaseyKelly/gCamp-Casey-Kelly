<div class="page-header">
  <%= link_to 'New User', signup_path, :class => "btn btn-info pull-right" %>
  <h1>Users</h1>
</div>

<table class="table table-striped">

  <colgroup>
    <col class="col-xs-2">
    <col class="col-xs-7">
  </colgroup>

  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.full_name, user_path(user) %></td>
      <% if current_user == user %>
      <td><%= mail_to user.email %></td>
      <td>
        <div class="text-right">
          <%= link_to 'Edit', edit_user_path(user), :class => "btn btn-info" %>
          <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </div>
      </td>
      <% else %>
      <td></td>
      <td></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
