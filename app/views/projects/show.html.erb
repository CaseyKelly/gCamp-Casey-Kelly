<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Edit', edit_project_path, :class => "btn btn-info" %>
    <%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
  </div>
  <h1><%= @project.name %></h1>
</div>

<ol class="breadcrumb">
  <li><a href="/projects">Projects</a></li>
  <li class="active"><%= @project.name %></li>
</ol>

<dl class="dl-horizontal">
  <p><dt>Project Name</dt>
    <dd><%= @project.name %></dd></p>
    <p><dd><%= link_to "#{@project.tasks.length} Tasks", tasks_path %></dd>
</dl>
